<Page x:Class="Raktar.Pagek.DolgozoHozaad"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raktar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DolgozoHozaad">

    <Grid>
        <Button x:Name="btnDolgozoHozaad" Click="btnDolgozoHozaad_Click" Content="Hozzáad" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="75" Margin="60,0,0,40"/>
        <TextBlock x:Name="tbvezeteknev" HorizontalAlignment="Left" Margin="175,60,0,0" TextWrapping="Wrap" Text="Vezetéknév" Width="150" Foreground="White" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbkeresztnev" HorizontalAlignment="Left" Margin="175,80,0,0" TextWrapping="Wrap" Text="Keresztnév" Width="150" Foreground="White" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbszulido" HorizontalAlignment="Left" Margin="175,100,0,0" TextWrapping="Wrap" Text="Születési idő" Width="150" Foreground="White" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbadoazon" HorizontalAlignment="Left" Margin="175,120,0,0" TextWrapping="Wrap" Text="Adóazonosító szám" Width="150" Foreground="White" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbtaj" HorizontalAlignment="Left" Margin="175,140,0,0" TextWrapping="Wrap" Text="Taj szám" Width="150" Foreground="White" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbirsz" HorizontalAlignment="Left" Margin="175,160,0,0" TextWrapping="Wrap" Text="Irányítószám" Width="150" Foreground="White" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbanyjaneve" HorizontalAlignment="Left" Margin="175,180,0,0" TextWrapping="Wrap" Text="Anyja neve" Width="150" Foreground="White" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbfizetes" HorizontalAlignment="Left" Margin="175,200,0,0" TextWrapping="Wrap" Text="Fizetés" Width="150" Foreground="White" VerticalAlignment="Top"/>
    </Grid>
</Page>
